<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span 6 offset 3">
    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], name: 'session[email]' %>
      </div>
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, name: 'session[password]' %>
      </div>
      <div class="actions btn btn-large btn-primary">
        <%= submit_tag "Sign in" %>
      </div>
    <% end %>
    <p>New User?<%= link_to "Sign Up Now", signup_path %></p>
  </div>
</div>
